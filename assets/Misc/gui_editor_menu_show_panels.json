import tkinter as tk

def send_value(value):
	# Do something with the selected value
	print(value)

switch_team_data = {
	"Left 4 Dead": {
		"Bill": "sb_takecontrol Bill",
		"Francis": "sb_takecontrol Francis",
		"Louis": "sb_takecontrol Louis",
		"Zoey": "sb_takecontrol Zoey"
	},
	"Left 4 Dead 2": {
		"Coach": "sb_takecontrol Coach",
		"Nick": "sb_takecontrol Nick",
		"Ellis": "sb_takecontrol Ellis",
		"Rochelle": "sb_takecontrol Rochelle"
	},
	"Team": {
		"Spectate": "jointeam 1",
		"Survivor": "jointeam 2",
		"Infected": "jointeam 3"
	}
}

root = tk.Tk()

menu = tk.Menu(root)
root.config(menu=menu)

# Create Left 4 Dead sub-menu
l4d_menu = tk.Menu(menu)
menu.add_cascade(label="Left 4 Dead", menu=l4d_menu)
for character, value in switch_team_data[
	"Left 4 Dead"
].items():
	l4d_menu.add_command(label=character, command=lambda v=value: send_value(v))

# Create Left 4 Dead 2 sub-menu
l4d2_menu = tk.Menu(menu)
menu.add_cascade(label="Left 4 Dead 2", menu=l4d2_menu)
for character, value in switch_team_data[
	"Left 4 Dead 2"
].items():
	l4d2_menu.add_command(label=character, command=lambda v=value: send_value(v))

# Create Team sub-menu
team_menu = tk.Menu(menu)
menu.add_cascade(label="Team", menu=team_menu)
for option, value in switch_team_data[
	"Team"
].items():
	team_menu.add_command(label=option, command=lambda v=value: send_value(v))

root.mainloop()
